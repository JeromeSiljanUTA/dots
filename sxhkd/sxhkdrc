# launch alacritty on this combination
alt + shift + Return
	alacritty

# close windows
alt + shift + c
    bspc node --close

# focus neighbor nodes
alt + {h,j,k,l}
    bspc node --focus {west,south,north,east}

# swap neighbor nodes
alt + shift + {h,j,k,l}
    bspc node --swap {west,south,north,east}

# focus neighbor nodes while in monocle mode
alt + ctrl + {j,k}
    bspc node --focus {prev,next}.local.!hidden.window.!locked

# launch rofi
alt + n
    rofi -show drun

# select desktops
alt + {a,s,d,f,u,i,o,p}
    bspc desktop {"Terminal","Xournal++","Misc","Firefox","Comms","IDE","Files","Media"} --focus

# select last desktop
alt + Tab
    bspc desktop last --focus

# send node to desktop
alt + shift + {a,s,d,f,u,i,o,p}
    bspc node focused --to-desktop {"Terminal","Xournal++","Misc","Firefox","Comms","IDE","Files","Media"}

# change mode to monocle, full screen, tiled
# switches to "next" mode
alt + {m}
    bspc desktop --layout next

# enters warpd normal mode
Print
    warpd --normal

# monitor scripts
alt + {1,2}
    ~/.config/bspwm/scripts/{laptop.sh,ext_mono.sh}

# screenshot
super + Print
    flameshot gui

# dump status
super + d
    ~/dump.sh

# reload config
alt + Escape
    pkill -usr1 -x sxhkd
