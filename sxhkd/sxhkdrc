# launch alacritty on this combination
super + shift + Return
    kitty

# close windows
super + shift + c
    bspc node --close

# focus neighbor nodes
super + {h,j,k,l}
    bspc node --focus {west,south,north,east}

# swap neighbor nodes
super + shift + {h,j,k,l}
    bspc node --swap {west,south,north,east}

# focus neighbor nodes while in monocle mode
super + ctrl + {j,k}
    bspc node --focus {next,prev}.local.!hidden.window.!locked

# toggle floating
super + shift + space
    bspc node --state ~floating

# launch rofi
super + n
    rofi -show drun

# select desktops
super + {a,s,d,f,u,i,o,p}
    bspc desktop {"Terminal","Notes","Emacs","Firefox","Comms","IDE","Files","Media"} --focus

# select last desktop
super + Tab
    bspc desktop last --focus

Insert
    bspc desktop last --focus

# send node to desktop
super + shift + {a,s,d,f,u,i,o,p}
    bspc node focused --to-desktop {"Terminal","Notes","Emacs","Firefox","Comms","IDE","Files","Media"}

# change mode to monocle, full screen, tiled
#super + {f}
    #bspc node --state ~fullscreen

# switches to "next" mode
super + {m}
    bspc desktop --layout next

# enters warpd normal mode
Print
    warpd --normal

#ctrl + Return 
    #warpd --normal

# monitor scripts
super + {1,2}
    ~/.config/bspwm/scripts/monitor {mono,ext}

XF86Display
    ~/.config/bspwm/scripts/monitor

super + 3
    ~/.config/bspwm/scripts/date

# clear, pop notifications
super + {0,9}
      {dunstctl close-all,dunstctl history-pop}
    #{dunstctl close-all && sudo -u jerome DBUS_SESSION_BUS_ADDRESS=unix:path=/run/user/1000/bus DISPLAY=:0 dunstctl close-all,dunstctl history-pop}

# notification shortcuts
super + 8
    ~/.config/bspwm/scripts/notif-battery.sh

# screenshot
super + Print
    flameshot gui

# dump status
#super + d
    #~/dump.sh

# play/pause media
XF86AudioPlay
    playerctl play-pause
Pause
    playerctl play-pause

# volume control
XF86Audio{LowerVolume,RaiseVolume,Mute}
    pactl set-sink-{volume @DEFAULT_SINK@ -2%,\
    volume @DEFAULT_SINK@ +2%,\
    mute @DEFAULT_SINK@ toggle}

# brightness control
XF86MonBrightness{Down,Up}
    xbacklight -{dec,inc} 4

# reload config
super + Escape
    pkill -usr1 -x sxhkd
